@model DTO.ParolaUpdateDTO

@{
    ViewData["Title"] = "ParolaGuncelle";
    Layout = "~/Areas/Personel/Views/Shared/_PersonelLayout.cshtml";
}

<div class="text-center">
    <h4>Parola Güncelle</h4>
    <hr />
</div>

<hr />
<div class="row">
    <div class="col-md-4 mx-auto">
        <form asp-action="ParolaGuncelle" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Parola</label>
                <input type="password" asp-for="Parola" class="form-control" />
                <span asp-validation-for="Parola" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Parola Tekrarı</label>
                <input type="password" asp-for="Parola1" class="form-control" />
                <span asp-validation-for="Parola1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


